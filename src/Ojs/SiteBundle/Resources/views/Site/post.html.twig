{% extends '::ojsbase.html.twig' %}
{% block title %}{{ post.title }} {{ parent() }}{% endblock %}
{% set hideleft = true %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_public_index'), 'title': 'home'|trans},
        {'title': post.title}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body %}

    <div class="container">
        <div class="board">
            <div class="board-inner">
                <h1>{{ post.title }}</h1>
                {% autoescape %}
                    <p>{{ post.content|raw }}</p>
                {% endautoescape %}
            </div>
        </div>
    </div>
{% endblock %}
